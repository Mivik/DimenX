#ifndef __DIMENX_FILE_MP3_H_
#define __DIMENX_FILE_MP3_H_

namespace dimenx {
namespace filetype {
namespace MP3 {

struct Header {
	char magic[3];
	char version;
	char reversion;
	char flag;
	char size[4];
};

};
};
};

#endif